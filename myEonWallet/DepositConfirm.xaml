<Window x:Class="myEonWallet.DepositConfirm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:myEonWallet"
        mc:Ignorable="d"
        Title="DepositConfirm" Height="342" Width="342.667" ResizeMode="NoResize"

        WindowStartupLocation="CenterScreen" Background="Transparent" AllowsTransparency="True" WindowStyle="None">

    <Border BorderThickness="5" BorderBrush="#FFD60505" 

    CornerRadius="20">
        <Border.Background>
            <ImageBrush ImageSource="images/SplashBackground.png" Opacity="100"/>
        </Border.Background>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Viewbox Margin="0,34,-0.333,0" Height="132" VerticalAlignment="Top">
                <TextBlock x:Name="txtMessage" Width="433" 

                FontSize="22" TextWrapping="Wrap" 

                TextAlignment="Center" Text="Confirm transfer of 1 EON to your Deposit balance ?" Foreground="#FFC90F0F" FontWeight="Bold" Margin="10,0" Height="178" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5">
                    <TextBlock.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform AngleX="-0.441"/>
                            <RotateTransform/>
                            <TranslateTransform X="-0.447"/>
                        </TransformGroup>
                    </TextBlock.RenderTransform>
                </TextBlock>
            </Viewbox>

            <Viewbox Grid.Row="1" Margin="0,9.667,-0.333,0">
                <StackPanel Orientation="Horizontal">
                    <Button Content="Yes" x:Name="YesButton" 

                    Margin="10" HorizontalAlignment="Left" 

                    VerticalAlignment="Top" Width="51" 

                    Click="Yes_Click" VerticalContentAlignment="Top" Height="22" Background="{x:Null}" Foreground="#FF15BD24" FontWeight="Bold" BorderBrush="{x:Null}" Visibility="Hidden"/>
                    <Button Content="No" x:Name="NoButton" 

                    Margin="10" HorizontalAlignment="Center" 

                    VerticalAlignment="Top" Width="53" 

                    Click="No_Click" IsCancel="True" Height="23" VerticalContentAlignment="Top" Foreground="#FFF32500" FontWeight="Bold" Background="{x:Null}" BorderBrush="{x:Null}"/>
                </StackPanel>
            </Viewbox>
            <PasswordBox x:Name="walletPasswordBox" HorizontalAlignment="Left" Margin="173,221,0,0" VerticalAlignment="Top" Width="115" PasswordChanged="walletPasswordBox_PasswordChanged" Height="18"/>
            <Label Content="Wallet Encryption Password :" HorizontalAlignment="Left" Height="25" Margin="-2,217,0,0" VerticalAlignment="Top" Width="170" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Foreground="White"/>
            <Label Content="Set Deposit amount to :" HorizontalAlignment="Left" Height="25" Margin="-2,185,0,0" VerticalAlignment="Top" Width="170" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Foreground="White"/>
            <TextBox x:Name="DepositAmountTB" HorizontalAlignment="Left" Height="21" Margin="173,189,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="115" HorizontalContentAlignment="Right"/>
            <Label Content="EON" HorizontalAlignment="Left" Height="25" Margin="288,185,0,0" VerticalAlignment="Top" Width="35" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Foreground="White"/>
        </Grid>
    </Border>
</Window>
