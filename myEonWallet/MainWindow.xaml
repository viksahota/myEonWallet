                    <Button x:Name="SendButton" HorizontalAlignment="Left" Margin="599,237,0,0" VerticalAlignment="Top" Width="30" FontSize="10" Click="SendButton_Click" Grid.Column="1" Height="32" Background="{x:Null}" BorderBrush="{x:Null}" ToolTip="Send Payment">
                        <Image Source="images/send.png"/>
                    </Button>
                    <GroupBox x:Name="DebugViewGroupBox" Grid.ColumnSpan="2" Header=" Debug information" HorizontalAlignment="Left" Height="132" Margin="19,545,0,0" VerticalAlignment="Top" Width="1004" Background="Black" Opacity="0.8" Foreground="#FF2EFF00" BorderBrush="{x:Null}">
                        <TextBlock x:Name="DebugViewerTB" HorizontalAlignment="Left" Height="100" Margin="10,6,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="976" Foreground="White" FontWeight="Bold"/>
                    </GroupBox>
                    <Label Content="= Total EON" HorizontalAlignment="Left" Margin="609,38,0,0" VerticalAlignment="Top" FontSize="14" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Width="99" Foreground="White" Grid.Column="1"/>
