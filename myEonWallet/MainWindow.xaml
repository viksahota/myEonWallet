<Window x:Name="myEonWallet" x:Class="myEonWallet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:myEonWallet"
        mc:Ignorable="d"
        Title="myEonWallet" Height="780.086" Width="1066.036" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Margin="0,31,0,-6.667" Width="1057" Height="721" VerticalAlignment="Top">
            <TabItem Header="Wallet">
                <Grid Background="#FFE5E5E5" Margin="5,5,5.333,0" RenderTransformOrigin="0.5,0.5" Height="685" VerticalAlignment="Top">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <GroupBox Header="Account List" HorizontalAlignment="Left" Height="269" Margin="10,10,0,0" VerticalAlignment="Top" Width="380">
                        <ListView Margin="10,10,10,32.333" x:Name="accountListView" FontSize="10">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Name" Width="60" DisplayMemberBinding="{Binding Name}" />
                                    <GridViewColumn Header="AccountID" Width="140" DisplayMemberBinding="{Binding AccountID}" />
                                    <GridViewColumn Header="Balance" Width="70" DisplayMemberBinding="{Binding Balance}" />
                                    <GridViewColumn Header="Deposit" Width="70" DisplayMemberBinding="{Binding Deposit}" />
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </GroupBox>
                    <GroupBox Header="Balance" HorizontalAlignment="Left" Height="132" Margin="395,10,0,0" VerticalAlignment="Top" Width="258" Background="#FFC4E4B6"/>
                    <GroupBox Header="Deposit" HorizontalAlignment="Left" Height="132" Margin="774,10,0,0" VerticalAlignment="Top" Width="257" Background="#FFDFD6A4"/>
                    <TextBox x:Name="amountTB" HorizontalAlignment="Left" Height="18" Margin="658,68,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="111" HorizontalContentAlignment="Center"/>
                    <Button x:Name="RefillButton" Content="&gt; Refill &gt;" HorizontalAlignment="Left" Margin="676,43,0,0" VerticalAlignment="Top" Width="76" FontSize="10"/>
                    <Button x:Name="WithdrawButton" Content="&lt; Withdraw &lt;" HorizontalAlignment="Left" Margin="676,93,0,0" VerticalAlignment="Top" Width="76" FontSize="10"/>
                    <Label Content="Deposit" HorizontalAlignment="Left" Margin="863,37,0,0" VerticalAlignment="Top" FontSize="20" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                    <Label Content="0" HorizontalAlignment="Left" Margin="798,79,0,0" VerticalAlignment="Top" Width="218" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="14" Background="{x:Null}"/>
                    <Label Content="Balance" HorizontalAlignment="Left" Margin="480,37,0,0" VerticalAlignment="Top" FontSize="20" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                    <Label Content="0" HorizontalAlignment="Left" Margin="415,79,0,0" VerticalAlignment="Top" Width="218" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="14" Background="{x:Null}"/>
                    <GroupBox Header="Send" HorizontalAlignment="Left" Height="130" Margin="395,149,0,0" VerticalAlignment="Top" Width="349">
                        <Button x:Name="SendPaymentBTN" Content="Send" HorizontalAlignment="Left" Margin="256,79,0,0" VerticalAlignment="Top" Width="74"/>
                    </GroupBox>
                    <GroupBox Header="Receive" HorizontalAlignment="Left" Height="130" Margin="755,149,0,0" VerticalAlignment="Top" Width="276"/>
                    <Label Content="Recipient :" HorizontalAlignment="Left" Margin="400,173,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="RecipientTB" HorizontalAlignment="Left" Height="24" Margin="473,175,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="259"/>
                    <Label Content="Amount :" HorizontalAlignment="Left" Margin="407,207,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="SendAmountTB" HorizontalAlignment="Left" Height="24" Margin="473,209,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="259"/>
                    <Button x:Name="CreateAccountButton" Content="Create New Account" HorizontalAlignment="Left" Margin="246,248,0,0" VerticalAlignment="Top" Width="128"/>
                    <GroupBox Header="Debug View" HorizontalAlignment="Left" Height="386" Margin="10,289,0,0" VerticalAlignment="Top" Width="1021">
                        <TextBox x:Name="debugTB" HorizontalAlignment="Left" Height="348" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="992"/>
                    </GroupBox>
                    <Button x:Name="TestButton" Content="Test" HorizontalAlignment="Left" Margin="58,248,0,0" VerticalAlignment="Top" Width="128"/>
                </Grid>
            </TabItem>
            <TabItem Header="Transactions">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Margin="2,0,-40,0" HorizontalAlignment="Left" Width="54" Header="Config"/>
            <TabItem Header="Log" Margin="-2,0,0,0" HorizontalAlignment="Left" Width="50"/>
        </TabControl>
    </Grid>
</Window>
