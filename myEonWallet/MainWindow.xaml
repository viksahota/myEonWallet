                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type ListViewItem}">
                                            <Border
                         BorderBrush="Transparent"
                         BorderThickness="0"
                         Background="{TemplateBinding Background}">
                                                <GridViewRowPresenter HorizontalAlignment="Stretch" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" Width="Auto" Margin="0" Content="{TemplateBinding Content}"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListView.ItemContainerStyle>

                        <ListView.View>
                            <GridView ColumnHeaderContainerStyle="{StaticResource GridViewColumnHeaderStyle1}" >
                                <GridViewColumn Header="Timestamp" Width="160" DisplayMemberBinding="{Binding Timestamp}"/>
                                <GridViewColumn Header="Type" Width="120" DisplayMemberBinding="{Binding Type}" />
                                <GridViewColumn Header="Sender" Width="160" DisplayMemberBinding="{Binding Sender}" />
                                <GridViewColumn Header="Recipient" Width="160" DisplayMemberBinding="{Binding AttachedRecipient}" />
